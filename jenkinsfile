pipeline {
    agent { label 'java11-mvn3.8.4' }
    triggers { upstream(upstreamProjects: 'testfirst', threshold: hudson.model.Result.SUCCESS) }
                 stages {
        stage('sourcecode'){
            steps{
                 git 'https://github.com/vishnuprabhu01/simple-java-maven-app.git'
            }
        }
        stage('build'){
            steps{
                sh '''/usr/local/apache-maven-3.8.4/bin/mvn clean package
                '''
            }
        }
        stage('publish test reports') {
            steps{
                        junit '**/TEST-*.xml'
            }
        }
        stage('sonarqube code quality') {
            steps{
                withSonarQubeEnv(credentialsId: 'sonar') {
                sh '/usr/local/apache-maven-3.8.4/bin/mvn clean package sonar:sonar'                         
}
            }
        }

                 }        



